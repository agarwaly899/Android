<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/coffee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_view"
            android:textColor="#EFEBE9"
            android:textColorHint="@android:color/white"
            android:backgroundTint="#FF6F00"
            android:textSize="18sp"
            android:hint="Enter your name here"
            android:layout_marginBottom="16dp"
            android:inputType="textCapWords"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOPPINGS"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#EEEEEE"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/check_box"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:paddingLeft="24dp"
            android:text="Whipped Cream ($1)"
            android:textSize="16sp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/check_box_choco"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingLeft="24dp"
            android:text="Chocolate ($2)"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTITY"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#EEEEEE"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            android:orientation="horizontal">
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:background="@drawable/left"
                android:textColor="@android:color/black"
                android:onClick="decreament"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantity_text_view"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            />
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:outlineAmbientShadowColor="@android:color/holo_purple"
                android:background="@drawable/right"
                android:textColor="@android:color/black"
                android:onClick="increament"
                />

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ORDER"
            android:layout_marginLeft="17dp"
            android:textColor="@android:color/black"
            android:onClick="submitOrder"/>



    </LinearLayout>
</ScrollView>
